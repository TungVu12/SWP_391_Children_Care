@model Reservation

@{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">
    <form method="post" asp-action="Approve">
        <div asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Id">ID lịch hẹn</label>
                <input type="text" class="form-control mb-3" asp-for="Id" readonly="true">
            </div>
            <div class="form-group col-md-6">

                <label asp-for="doctor_id">ID bác sĩ</label>
                <input type="text" class="form-control mb-3" asp-for="doctor_id" readonly="true">
                @*  <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Nhập title">*@
            </div>
            <div class="form-group col-md-6">
                <label asp-for="parent_id">ID phụ huynh</label>
                <input type="text" class="form-control mb-3" asp-for="parent_id" readonly="true">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="child_id">ID trẻ khám</label>
                <input type="text" class="form-control mb-3" asp-for="child_id" readonly="true">
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="r_title">Tổng quát</label>
                <input type="text" class="form-control" asp-for="r_title" readonly="true">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="r_content">Nội dung chẩn đoán</label>
                <input type="text" class="form-control mb-3" asp-for="r_content" readonly="true">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="create_date">Ngày hẹn khám</label>
                <input type="datetime-local" class="form-control mb-3" asp-for="create_date">
            </div>
         @*   <div class="form-group col-md-6">
                <label asp-for="status">Trạng thái lịch</label>
                <input type="text" class="form-control mb-3" asp-for="status" value=1 readonly="true">
            </div>*@
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Cập nhật</button>
        <a asp-controller="Reservation" asp-action="Index" class="btn btn-lg btn-warning p-2">Trở về</a>
    </form>
</div>