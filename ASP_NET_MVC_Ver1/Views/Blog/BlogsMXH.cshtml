@model IEnumerable<Post>
<!-- Blog Start -->
<style>
    .article-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .article {
        background-color: #f5f5f5;
        border-radius: 10px;
        overflow: hidden;
    }

    .article-image img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .article-content {
        padding: 20px;
    }

    .article-title {
        font-size: 20px;
        margin: 0;
    }

    .article-description {
        margin: 10px 0;
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .author {
        display: flex;
        align-items: center;
    }

    .author-avatar {
        width: 25px;
        height: 25px;
        border-radius: 50%;
        margin-right: 5px;
    }

    .article-stats span {
        margin-left: 10px;
    }

    .col {
        text-align: right;
    }

    .btn-custom-sea {
        background-color: #007bff;
        color: #fff;
    }
</style>
<div class="container-fluid py-5">

    <div class="col m-3">
        <a asp-controller="Blog" asp-action="Create" class="btn btn-custom-sea btn-outline btn-hover">
            <i class="bi bi-plus-square bi-4x"></i> Add account
        </a>
    </div>
    <div class="article-list">
        @foreach (var item in Model)
        {
            <div class="article">
                <div class="article-image">
                    @if (item.Image != null)
                    {
                        <img src="data:image/*;base64,@(Convert.ToBase64String(item.Image))">
                    }
                </div>
                <div class="article-content">
                    <a class="h3 d-block mb-3" asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.Id">@item.Title</a>
                    <p class="article-description">@item.Description</p>
                    <div class="article-meta">
                        <div class="author">
                            <img src="~/img/user.jpg" alt="" class="author-avatar">
                            <span class="author-name">John Doe</span>
                        </div>
                        <div class="article-stats">
                            <span class="views"><i class="far fa-eye"></i> 12345</span>
                            <span class="comments"><i class="far fa-comment"></i> 123</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Blog End -->