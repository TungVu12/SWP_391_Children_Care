@model IEnumerable<Examination>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}
<div class="container shadow p-5">


    <div class="col mb-3">
        <a asp-controller="Examination" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Thêm mới hồ sơ bệnh án</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col" width="120px" style="text-align: center">Ngày khám bệnh</th>
                <th scope="col" width="100px" style="text-align: center">Tên bé</th>
                <th scope="col" width="100px" style="text-align: center">Tên người giám hộ</th>
                <th scope="col" width="100px" style="text-align: center">Khoa khám</th>
                <th scope="col" width="300px" style="text-align: center">Nội dung bệnh án</th>
                <th scope="col" width="100px" style="text-align: center">Tên bác sĩ chỉ định</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20px">
                        @item.RegistrationDate.ToString("dd/MM/yyyy")
                    </td>
                    <td width="20px">
                        @item.child_id
                    </td>
                    <td width="20px">
                        @item.parent_id
                    </td>
                    <td width="20px">
                        @item.category
                    </td>
                    <td width="20px">
                        @item.r_content
                    </td>
                    <td width="20px">
                        @item.doctor_id
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Examination" asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Sửa</a>&nbsp;
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>