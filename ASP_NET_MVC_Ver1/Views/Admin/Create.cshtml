@model User
@{
    ViewData["Title"] = "Tạo tài khoản";
}
<style>
    body {
        background-color: #f7f7f7;
        font-family: Arial, sans-serif;
    }

    .container-a {
        margin-top: 50px;
        background-color: #fff;
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>
<div class="container-a">
    <div class="row pb-2">
        <h2>Add account</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control mb-3" asp-for="FirstName">
                <span asp-validation-for="FirstName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control mb-3" asp-for="LastName">
                <span asp-validation-for="LastName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" class="form-control mb-3" asp-for="Email">
                <span asp-validation-for="Email" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })

                <input type="text" class="form-control mb-3" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="password" class="form-control mb-3" asp-for="Password">
                <span asp-validation-for="Password" class=" alert-danger"></span>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-outline-primary px-4 py-2 mx-2"><i class="bi bi-save"></i> Create</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-lg btn-outline-warning px-4 py-2">Back</a>
        </div>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
