@using ASP_NET_MVC_Ver1.Areas.Identity.Data;
@model IEnumerable<ASP_NET_MVC_Ver1.Areas.Identity.Data.ApplicationUser>
@{
    ViewData["Title"] = "READ USER";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}
<div class="container shadow p-5">


    <div class="col mb-3">
        <a asp-controller="Admin" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Thêm mới tài khoản</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Họ và tên</th>
                <th scope="col">Email</th>
                <th scope="col">Điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.FirstName @item.LastName
                    </td>
                    <td width="20%">
                        @item.Email
                    </td>
                    <td width="25%">
                        @item.PhoneNumber
                    </td>
                  @*  <td width="20%">
                        @item.Address
                    </td>*@
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Admin" asp-action="Update" asp-route-id="@item.Id" class=" btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Sửa</a>&nbsp;
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Xoá</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
