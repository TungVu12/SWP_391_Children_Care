@model Category


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Add Category</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="title" placeholder="Title">
                <span asp-validation-for="title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="content">Content</label>
                <input type="text" class="form-control mb-3" asp-for="content" placeholder="Content">
                <span asp-validation-for="content" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="creator_id">ID người tạo</label>
                <input type="text" class="form-control mb-3" asp-for="creator_id" value="@ViewBag.UserId">
                @*@ViewBag.UserId*@
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Save</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-lg btn-warning p-2">Back</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
