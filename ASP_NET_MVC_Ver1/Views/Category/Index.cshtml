@page
@model IEnumerable<Category>
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="node_modules/antd/dist/antd.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
@if (TempData["ResultOk"] != null)
{
    <div id="alert-div" class="alert alert-success position-fixed top-0 end-0 border border-success rounded-pill py-2 px-3" style="max-width: 450px;">
        <span class="fw-bold" style="font-size: 16px;">@TempData["ResultOk"]</span>
        <button type="button" class="btn-close float-start" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <script>
        // Get the alert element
        var alertDiv = document.getElementById("alert-div");

        // Wait for 5 seconds and then hide the alert
        setTimeout(function () {
            alertDiv.style.display = "none";
        }, 3000);
    </script>
}
<style>
    .btn-custom-sea {
        background-color: #0077be; /* Thay đổi mã màu tại đây */
        background-image: linear-gradient(#0077be, #00bfff); /* Thêm hiệu ứng gradient */
        color: #fff; /* Thay đổi màu chữ */
        border-color: #0077be; /* Thay đổi màu đường viền */
    }
    /* styles.css */
    .ant-table {
        width: 100%;
    }

        .ant-table th,
        .ant-table td {
            padding: 8px;
            text-align: center;
        }

        .ant-table thead th {
            background-color: #f0f0f0;
            font-weight: bold;
        }

    .ant-table-bordered th,
    .ant-table-bordered td {
        border: 1px solid #f0f0f0;
    }

    .ant-table-striped tbody > tr:nth-child(odd) {
        background-color: #fafafa;
    }

    .ant-table-responsive {
        overflow-x: auto;
    }

    .custom-table {
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        width: 100%;
    }

        .custom-table thead th {
            background-color: #0079BF;
            padding: 12px;
            font-weight: bold;
            text-align: center;
            color: #FFFFFF;
        }

        .custom-table tbody td {
            padding: 12px;
            text-align: center;
        }

        .custom-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .custom-table tbody tr:hover {
            background-color: #D6EAF8;
        }

    .table td {
        vertical-align: middle; /* Căn giữa dọc các ô dữ liệu */
    }

</style>
<div class="col m-3">
    <a asp-controller="Category" asp-action="Create" class="btn btn-custom-sea btn-outline btn-hover"><i class="bi bi-plus-square bi-4x"></i>Add Category</a>
</div>
<div class="container">
    <br />
    <div class="table-responsive" style="width:90%; margin:0 auto;">
        <table id="customerDatatable" class="ant-table ant-table-bordered ant-table-striped ant-table-responsive custom-table" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>STT</th>
                    <th>Title</th>
                    <th>Detail</th>
                    <th>Created</th>
                    <th>Name Parent</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
