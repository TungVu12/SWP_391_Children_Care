@model Category

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Sửa Category</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Id">Id</label>
                <input type="text" class="form-control mb-3" asp-for="Id" readonly>
                <span asp-validation-for="Id" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Creator">CreatorID</label>
                <input type="text" class="form-control mb-3" asp-for="Creator" readonly>
                <span asp-validation-for="Creator" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title">
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Content">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Content">
                <span asp-validation-for="Content" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-lg btn-warning p-2">Back</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}